<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title><%= title %> - Hypertube</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="icon" type="image/png" href="/favicon.png">
        <link rel="stylesheet" href="/css/styles.css">
        <link rel="stylesheet" href="/semantic/dist/semantic.min.css">
        <link rel="stylesheet" href="/nouislider.min.css">
        <link rel="stylesheet" href="/nouislider_perso.css">
        <script
        src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>
        <script src="/semantic/dist/semantic.min.js"></script>
        <script src="/nouislider.min.js"></script>
     </head>
    <body>

        <div id="wrap">
            <div id="main">
                <div class="ui large inverted black five item pointing menu" style="border-radius:0;">
                    <a href="/profile" class="header item <% if (title === 'Profil'){ %><%= 'active' %><% } %>"><i class="user outline large icon"></i></a>
                    <a href="/" class="header item <% if (title === 'Accueil'){ %><%= 'active' %><% } %>"><i class="search large icon"></i></a>
                    <a href="/logout" class="header item"><i class="power off large icon"></i></a>
                </div>
                <div class="ui main container">
                <% if (locals.flash && locals.flash.tabError) {
                    for (id in locals.flash.tabError) { %>
                    <div class="ui negative message">
                        <%= locals.flash.tabError[id] %>
                    </div>
                    <% }
                } else if (locals.flash && locals.flash.tabSuccess) {
                    for (id in locals.flash.tabSuccess) { %>
                <div class="ui positive message">
                    <%= locals.flash.tabSuccess[id] %>
                </div>
                <% }
                } %>
